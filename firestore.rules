rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ⚠️ TEMPORAL: Reglas permisivas para debugging
    // Solo para diagnosticar el problema de permisos
    // NO USAR EN PRODUCCIÓN

    // Permitir lectura/escritura a usuarios autenticados (TEMPORAL)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
