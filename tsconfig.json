{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@/types": ["./src/types"],
      "@/components": ["./components"],
      "@/utils": ["./utils"],
      "@/services": ["./services"],
      "@/contexts": ["./src/contexts"],
      "@/hooks": ["./hooks"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}